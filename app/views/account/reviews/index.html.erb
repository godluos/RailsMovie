<div class="col-md-12">

  <h2 class="text-center"> 我发表过的影评 </h2>

  <table class="table">
    <thead>
      <tr>
        <th> 评论内容 </th>
        <th> 电影名称 </th>
        <th> 发布时间 </th>
      </tr>
    </thead>

    <tbody>
      <% @reviews.each do |review| %>
        <tr>
          <td> <%= review.content %> </td>
          <td> <%= review.movie.title %> </td>
          <td> <%= review.updated_at %> </td>

        </tr>
      <% end %>
    </tbody>
  </table>
</div>
